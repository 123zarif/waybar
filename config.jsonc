{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "spacing": 10,
  "height": 30,
  "margin-top": 5,
  "modules-left": [
    "custom/omarchy",
    "custom/update",
    "group/clock",
    "custom/screenrecording-indicator"
  ],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    "group/memory",
    "cpu",
    "network",
    "bluetooth",
    "group/audio-expander"
  ],

  // Omarchy Menus -----------------------------------------------------------------------------------------------
  "custom/omarchy": {
    "format": "<span font='omarchy'>\ue900</span>",
    "on-click": "omarchy-menu",
    "on-click-right": "xdg-terminal-exec",
    "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space"
  },

  // --------------------------------------------------------------------------------------------------------------

  // Update Module -------------------------------------------------------------------------------------------

  "custom/update": {
    "format": "",
    "exec": "omarchy-update-available",
    "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
    "tooltip-format": "Omarchy update available",
    "signal": 7,
    "interval": 21600
  },

  // --------------------------------------------------------------------------------------------------------------

  // Clock Modules ------------------------------------------------------------------------------------------------

  "clock": {
    "format": "{:L%I:%M %p | %A}",
    "locale": "en_US.UTF-8"
  },
  "clock#two": {
    "format": "{:%B %d, %Y}",
    "locale": "en_US.UTF-8"
  },
  "group/clock": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500
    },
    "modules": ["clock", "clock#two"]
  },

  // --------------------------------------------------------------------------------------------------------------

  // Screen Recording Indicator ----------------------------------------------------------------------------------

  "custom/screenrecording-indicator": {
    "on-click": "omarchy-cmd-screenrecord",
    "exec": "$OMARCHY_PATH/default/waybar/indicators/screen-recording.sh",
    "signal": 8,
    "return-type": "json"
  },

  // ---------------------------------------------------------------------------------------------------------------

  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "default": "",
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "6": "",
      "7": "",
      "8": "",
      "9": "",
      "active": ""
    },
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
      "6": [],
      "7": [],
      "8": [],
      "9": []
    }
  },

  // Ram Modules ------------------------------------------------------------------------------------------------

  "memory": {
    "format": "<span>RAM: {percentage}%</span>",
    "tooltip": false,
    "interval": 30,
    "cursor": "pointer"
  },
  "memory#two": {
    "format": "{used:0.1f}GiB/{total:0.1f}GiB \n{swapUsed:0.1f}GiB/{swapTotal:0.1f}GiB ({swapPercentage}%) Swap",
    "tooltip": false,
    "interval": 30
  },

  "group/memory": {
    "orientation": "horizontal",

    "drawer": {
      "transition-duration": 500,
      "children-class": "memory-group-item",
      "transition-to-state": "expanded"
    },
    "modules": ["memory", "memory#two"]
  },

  // ---------------------------------------------------------------------------------------------------------------

  // CPU Modules ------------------------------------------------------------------------------------------------

  "cpu": {
    "interval": 5,
    // "format": "󰍛  {usage}%",
    "format": "CPU: {usage}%",
    "on-click-right": "xdg-terminal-exec btop",
    "tooltip": false,
    "cursor": "pointer"
  },

  // ---------------------------------------------------------------------------------------------------------------

  // Network Modules --------------------------------------------------------------------------------------------

  "network": {
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "format": "{icon}",
    "format-wifi": "{icon}",
    "format-ethernet": "󰀂 ⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "format-disconnected": "󰤮",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "tooltip": false,
    "interval": 3,
    "spacing": 1,
    "on-click-right": "omarchy-launch-wifi",
    "cursor": "pointer"
  },

  // ---------------------------------------------------------------------------------------------------------------

  // Bluetooth Module -------------------------------------------------------------------------------------------

  "bluetooth": {
    "format": "",
    "format-disabled": "󰂲",
    "format-connected": " Connected",

    "tooltip-format": "Devices connected: {num_connections}",
    "on-click-right": "blueberry",
    "on-click": "bash ~/.config/waybar/scripts/toggle-bluetooth.sh"
  },

  // ---------------------------------------------------------------------------------------------------------------

  // Audio Modules ------------------------------------------------------------------------------------------------

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "on-click-right": "$TERMINAL --class=Wiremix -e wiremix",
    "on-click": "pamixer -t",
    "tooltip-format": "Playing at {volume}%",
    "scroll-step": 5,
    "format-muted": "",
    "format-icons": {
      "default": ["  ", "  ", "  "]
    }
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },

  "group/audio-expander": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "children-class": "audio-group-item",
      "transition-to-state": "expanded"
    },
    "modules": ["pulseaudio", "pulseaudio/slider"]
  }

  // ---------------------------------------------------------------------------------------------------------------
}
